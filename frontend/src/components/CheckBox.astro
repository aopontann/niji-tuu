<script>
  const songEle = document.getElementById("checkbox-song") as HTMLElement;
  const infoEle = document.getElementById("checkbox-info") as HTMLElement;

  songEle.addEventListener("click", async () => {
    window.localStorage.setItem("checkbox-song", songEle.checked)
  });

  infoEle.addEventListener("click", async () => {
    window.localStorage.setItem("checkbox-info", infoEle.checked)
  });
</script>
