<input id="keyword-text" class="input" type="text" placeholder="キーワード" />

<script>
  const ele = document.getElementById("keyword-text") as HTMLInputElement;
  // キーワード初期化処理
  const keyword = window.localStorage.getItem("keyword") as string;
  ele.value = keyword;

  ele.addEventListener("change", (event: Event) => {
    window.localStorage.setItem("keyword", event.target?.value)
  });
</script>
